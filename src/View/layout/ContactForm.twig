{% extends 'layout/layout.twig' %}

{% block title %}Authentification{% endblock %}

{% block description %}{% endblock %}


{% block main %}

<main>

    <section class="row" id="forms">
    <div class="col-lg-5 offset-lg-1 form1">

        <form class="form-horizontal" method="post">
            <fieldset>
                <legend class="text-center">Contactez-Nous</legend>

                <!-- Name input-->
                <div class="form-group">
                    <label class="col-lg-3 control-label" for="name">Nom</label>
                    <div class="col-lg-9">
                        <input id="name" name="name" type="text" placeholder="Votre nom" class="form-control">
                    </div>
                </div>

                <!-- Email input-->
                <div class="form-group">
                    <label class="col-lg-3 control-label" for="email">E-mail</label>
                    <div class="col-lg-9">
                        <input id="email" name="email" type="text" placeholder="Votre email" class="form-control">
                    </div>
                </div>
            </fieldset>
        </form>


        <!-- Message body -->
        <div class="form-group">
            <label class="col-lg-3 control-label" for="message">Message</label>
            <div class="col-lg-9">
                <textarea class="form-control" id="message" name="message" placeholder="RÃ©digez vore message ici" rows="5"></textarea>
            </div>
        </div>



        <!-- Form actions -->
        <div class="form-group">
            <div class="col-lg-12 text-right">
                <button type="submit" class="btn btn-danger btn-lg">Envoyer</button>
            </div>
        </div>

    </div>
</section>
</main>

{% endblock %}